@{
    ViewBag.Title = "Home Page";
}
<div id="root" class="container">
    <div class="jumbotron">
        <h2>Amortization Schedule Calculator</h2>
        <p>
         This form will use a COBOL API to calculate monthly payments. <br />
         Ensure you change the endpoint URL below to reference either your local or serverless API.
        </p>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form id="calculator-input-form">
                        <div class="form-group">
                            <label for="formApiEndpoint" class="control-label">API Endpoint</label>
                            <span class="input-group">
                                <input placeholder="Enter API Endpoint as https://..." name="apiEndpoint" type="text" id="formApiEndpointInput" class="form-control" value=""> 
                            </span>
                        </div>
                        <div class="form-group" id="formPrincipal">
                            <label for="formPrincipal" class="control-label">Loan Amount</label>
                            <span class="input-group">
                                <span class="input-group-addon">$</span>
                                <input placeholder="Enter principal" name="principal" type="text" id="formPrincipalInput" class="form-control" value="">
                            </span>
                        </div>
                        <div class="form-group" id="formLoanTerm">
                            <label for="formLoanTerm" class="control-label">Term in months</label>
                            <span class="input-group">
                                <input name="loanTerm" placeholder="Enter loan term between 1 and 480" type="text" id="formLoanTermInput" class="form-control" value="">
                                <span class="input-group-addon">months</span>
                            </span>
                        </div>
                        <div class="form-group" id="formLoanRate">
                            <label for="formLoanRate" class="control-label">Annual Percentage Rate</label>
                            <span class="input-group">
                                <input name="loanRate" placeholder="Enter rate" type="text" id="formLoanRateInput" class="form-control" value="">
                                <span class="input-group-addon">%</span>
                            </span>
                        </div>
                    </form>
                    <button type="submit" id="buttonCalculate" class="btn btn-primary">Calculate</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div style="margin-bottom:20px">
                        <p class="lead text-center">Monthly Payments</p>
                        <p class="lead text-center numeral">
                            <span class="currency" id="currency"></span>
                            <span id="montlyPayment"></span>
                        </p>
                        <div class="justified-text-space-between with-bottom-border">
                            <span>Total Principal Paid</span>
                            <span id="totalPrincipalPaid"></span>
                        </div>
                        <div class="justified-text-space-between">
                            <span>Total Interest Paid</span>
                            <span id="totalInterestPaid"></span>
                        </div>
                    </div>
                    <div>
                        <a href="#amortizationSchedule" data-toggle="collapse" id="showHideAmortTableLink">Show amortization schedule</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="amortizationSchedule" class="collapse">
        </div>
    </div>
</div>
